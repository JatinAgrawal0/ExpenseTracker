@page
@model LoginModel



<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-6 col-lg-5 mx-auto">
            <section class="card shadow-lg p-4 rounded">
                <form id="account" method="post">
                    <h2 class=" text-center text-primary">Log in</h2>
                    <hr />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="Email" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" />
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" id="rememberMe" />
                        <label asp-for="Input.RememberMe" class="form-check-label" for="rememberMe">
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <button id="login-submit" type="submit" class="w-100 btn btn-primary btn-lg">Log in</button>

                    <div class="mt-4">
                        <p class="text-center">
                            <a id="forgot-password" class="text-decoration-none text-primary" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                        <p class="text-center">
                            <a class="text-decoration-none text-primary" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        <p class="text-center">
                            <a id="resend-confirmation" class="text-decoration-none text-primary" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>


    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
